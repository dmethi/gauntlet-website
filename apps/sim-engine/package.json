{
  "name": "@gauntlet/sim-engine",
  "version": "1.0.0",
  "private": true,
  "description": "Fantasy football simulation engine for advanced projections and modeling",
  "main": "dist/index.js",
  "bin": {
    "gauntlet-sim": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist",
    "sim:test": "tsx src/cli.ts --mode test",
    "sim:season": "tsx src/cli.ts --mode season",
    "sim:matchup": "tsx src/cli.ts --mode matchup"
  },
  "dependencies": {
    "@gauntlet/types": "workspace:*",
    "@gauntlet/models": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
} 