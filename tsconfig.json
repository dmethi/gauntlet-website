{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@gauntlet/lib": ["./packages/lib/src"],
      "@gauntlet/lib/*": ["./packages/lib/src/*"],
      "@gauntlet/sim-engine": ["./apps/sim-engine/src"],
      "@gauntlet/sim-engine/*": ["./apps/sim-engine/src/*"],
      "@gauntlet/types": ["./packages/types/src"],
      "@gauntlet/types/*": ["./packages/types/src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "exclude": ["node_modules", ".next", "dist", "build"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
